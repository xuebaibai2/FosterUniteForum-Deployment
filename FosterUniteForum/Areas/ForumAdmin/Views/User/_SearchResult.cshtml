@using FosterUniteForum.Data.EntityModel;
@model List<ForumUser>


<h3><b>User List</b></h3>
<hr />

<table class="table table-striped">
    <thead>
        <tr>
            <th>User Name</th>
            <th>E-mail address</th>
            <th>Deleted</th>
            <th>Active</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @if (Model.Count != 0)
        {
            foreach (ForumUser user in Model)
            {
                <tr>
                    <td>@user.FirstName</td>
                    <td>@user.EmailAddress</td>
                    <td>@user.Deleted</td>
                    <td>@user.Active</td>
                    <td>
                        @Html.ActionLink(
                                   "Edit",
                                   "Update",
                                   new { id = user.Id },
                                   new { Class = "btn btn-primary" })
                        &nbsp;&nbsp;&nbsp;
                        @Html.ActionLink(
                                    "Delete",
                                    "DeleteUser",
                                    new { id = user.Id },
                                    new { Class = "btn btn-warning" })
                    </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="5">
                    <span style="color:red">No result found</span>
                </td>
            </tr>
        }
    </tbody>
</table>

